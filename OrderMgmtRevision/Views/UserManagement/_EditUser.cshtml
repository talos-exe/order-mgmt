<form method="post" asp-action="EditConfirm" asp-controller="UserManagement">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" required/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="IsConfirmed" id="confirmUserCheck" />
        <label class="form-check-label" for="confirmUserCheck">
            Confirmed User
        </label>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="activeUserCheck" />
        <label class="form-check-label" for="activeUserCheck">
            Activate User Account
        </label>
    </div>

    <br />
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>