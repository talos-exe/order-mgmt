@model OrderMgmtRevision.Models.UserViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<form method="post" asp-action="EditConfirm" asp-controller="UserManagement">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UserName">@Localizer["Username"]</label>
        <input asp-for="UserName" class="form-control" required />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">@Localizer["Email address"]</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName">@Localizer["Full Name"]</label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="IsConfirmed" id="confirmUserCheck" />
        <label class="form-check-label" for="confirmUserCheck">
            @Localizer["Confirmed User"]
        </label>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="activeUserCheck" />
        <label class="form-check-label" for="activeUserCheck">
            @Localizer["Activate User Account"]
        </label>
    </div>

    <br />
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        @Localizer["Cancel"]
    </button>
    <button type="submit" class="btn btn-success">
        @Localizer["Save Changes"]
    </button>
</form>
