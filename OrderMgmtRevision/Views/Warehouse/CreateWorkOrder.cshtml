@model OrderMgmtRevision.Models.WorkOrder
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create Work Order"];
}

<h2>@Localizer["Create Work Order"]</h2>

@if (TempData["Errors"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show ms-5 me-5" role="alert">
        <ul>
            @foreach (var error in (TempData["Errors"] as IEnumerable<string> ?? new List<string>()))
            {
                <li>@error</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="CreateWorkOrder" asp-controller="Warehouse" method="post">
    <input type="hidden" name="WarehouseId" value="@ViewBag.WarehouseId" />

    <div class="form-group">
        <label asp-for="Description">@Localizer["Description"]</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type">@Localizer["Type"]</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
