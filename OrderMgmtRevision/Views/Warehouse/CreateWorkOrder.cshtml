@model OrderMgmtRevision.Models.WorkOrder

@{
    ViewData["Title"] = "Create Work Order";
}

<h2>Create Work Order</h2>

<form asp-action="CreateWorkOrder" asp-controller="Warehouse" method="post">
    <input type="hidden" name="WarehouseId" value="@ViewBag.WarehouseId" />

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
