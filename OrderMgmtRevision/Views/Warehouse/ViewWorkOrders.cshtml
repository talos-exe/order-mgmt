@model IEnumerable<OrderMgmtRevision.Models.WorkOrder>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Work Orders"];
}



<div class="ms-5 me-5 mt-3">
    <div class="d-flex justify-content-between mb-3">
        <h2>@Localizer["Work Orders for"] @ViewBag.WarehouseName</h2>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show ms-5 me-5" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ID"]</th>
            <th>@Localizer["Description"]</th>
            <th>@Localizer["Type"]</th>
            <th>@Localizer["Created At"]</th>
            <th>@Localizer["Fee"]</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">@Localizer["No work orders found."]</td>
            </tr>
        }
        else
        {
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Description</td>
                    <td>@order.Type</td>
                    <td>@order.CreatedAt.ToString("g")</td>
                    <td>$@order.Fee</td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
