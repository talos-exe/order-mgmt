@model OrderMgmtRevision.Models.ForgotPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OrderMgmtRevision</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(to bottom right, #000000,#07183D);
        }
    </style>
</head>
<body>
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center py-4 px-4">
        <div class="text-white mb-3 fs-1 fw-bold" id="omsLabel">OMS</div>
        <div class="card login-card p-4 shadow-sm w-100" style="max-width: 450px;">
            <div class="d-flex justify-content-end">
                <div class="form-check form-switch">
                    <label class="form-check-label fw-semibold" for="langToggle" id="langLabel">EN</label>
                    <input class="form-check-input" type="checkbox" id="langToggle" onchange="toggleLanguage()" />
                </div>
            </div>
            <h2 class="text-center text-dark mb-3" id="forgotLabel">Forgot Password</h2>
            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label" id="emailLabel"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100" id="sendResetLabel">Send Reset Link</button>
            </form>
            <div class="mt-3 text-center">
                <a href="@Url.Action("Login", "Account")" id="backToLabel">Back to Login</a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        const translations = {
            en: {
                langLabel: "EN",
                emailLabel: "Email",
                forgotLabel: "Forgot Password",
                sendResetLabel:"Send Reset Link",
                backToLabel: "Back to Login",
                omsLabel: "OMS"
            },
            zh: {
                langLabel: "ZH",
                emailLabel: "电子邮件",
                forgotLabel: "忘记密码",
                sendResetLabel: "发送重置链接",
                backToLabel: "返回登录",
                omsLabel: "云服务器"
            }
        };

        function toggleLanguage() {
            const isEnglish = document.getElementById("langToggle").checked;
            const lang = isEnglish ? "zh" : "en";


            document.getElementById("langLabel").textContent = translations[lang].langLabel;
            document.getElementById("emailLabel").textContent = translations[lang].emailLabel;
            document.getElementById("sendResetLabel").textContent = translations[lang].sendResetLabel;
            document.getElementById("backToLabel").textContent = translations[lang].backToLabel;
            document.getElementById("omsLabel").textContent = translations[lang].omsLabel;
             document.getElementById("forgotLabel").textContent = translations[lang].forgotLabel;
        }

    </script>
</body>
</html>
