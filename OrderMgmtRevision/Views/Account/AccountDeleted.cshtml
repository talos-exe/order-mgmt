@{
    Layout = null;
    ViewData["Title"] = "Account Deleted";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OrderMgmtRevision</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(to bottom right, #000000,#07183D);
        }
    </style>
</head>
<body>
    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center py-4 px-4 overflow-auto">
        <div class="text-white mb-3 fs-1 fw-bold">领星 OMS</div>
        <div class="card login-card p-4 shadow-sm w-100" style="max-width: 450px;">
            <div class="d-flex justify-content-end">
                <div class="form-check form-switch">
                    <label class="form-check-label fw-semibold" for="langToggle" id="langLabel">EN</label>
                    <input class="form-check-input" type="checkbox" id="langToggle" onchange="toggleLanguage()" />
                </div>
            </div>
            <div class="text-center mb-3">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <h2 class="text-center text-dark mb-3" id="successLabel">Account Successfully Deleted</h2>
            <p class="text-center" id="messageText">Your account has been permanently deleted from our system.</p>
            <div class="mt-3 text-center">
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary" id="homeButton">Return to Home</a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const translations = {
            en: {
                langLabel: "EN",
                successLabel: "Account Successfully Deleted",
                messageText: "Your account has been permanently deleted from our system.",
                homeButton: "Return to Home"
            },
            zh: {
                langLabel: "ZH",
                successLabel: "账户已成功删除",
                messageText: "您的账户已从我们的系统中永久删除。",
                homeButton: "返回首页"
            }
        };
        function toggleLanguage() {
            const isEnglish = document.getElementById("langToggle").checked;
            const lang = isEnglish ? "zh" : "en";
            document.getElementById("langLabel").textContent = translations[lang].langLabel;
            document.getElementById("successLabel").textContent = translations[lang].successLabel;
            document.getElementById("messageText").textContent = translations[lang].messageText;
            document.getElementById("homeButton").textContent = translations[lang].homeButton;
        }
    </script>
</body>
</html>
