@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var user = User.Identity.IsAuthenticated ? await UserManager.GetUserAsync(User) : null;
    var isAdmin = user != null && await UserManager.IsInRoleAsync(user, "Admin");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderMgmtRevision</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrderMgmtRevision.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    @* <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OrderMgmtRevision</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header> *@
    <div class="main-container">
        <div class="sidebar-container">
            <div class="sidebar-header">
                领星 OMS
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-list">
                    <li class="sidebar-link">
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-house-fill"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a asp-controller="Warehouse" asp-action="Index">
                            <i class="bi bi-building-fill"></i>
                            Warehouse
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a asp-controller="Inventory" asp-action="Index">
                            <i class="bi bi-box-seam-fill"></i>
                            Inventory
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a asp-controller="Settings" asp-action="Index">
                            <i class="bi bi-gear-fill"></i>
                            Settings
                        </a>
                    </li>

                    <!-- Only show for Admins -->
                    @if (isAdmin) {
                        <li class="sidebar-link">
                            <a asp-controller="UserManagement" asp-action="Index">
                                <i class="bi bi-person-circle"></i>
                                User Management
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="main-content">
            <div class="topbar">
                <div class="tab-group">
                    <div class="tab">
                        Dashboard
                        <i class="bi bi-x"></i>
                    </div>
                </div>
                <div class="topbar-right">
                    <div class="right-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            🌐 <span id="language-display">English</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="?lang=en" onclick="updateLanguage('English')">English</a></li>
                            <li><a class="dropdown-item" href="?lang=zh" onclick="updateLanguage('中文')">中文 (Chinese)</a></li>
                        </ul>
                    </div>
                    <script>
                        // Function to update the displayed language
                        function updateLanguage(language) {
                            document.getElementById('language-display').textContent = language;
                        }

                        // Set default language on page load
                        window.onload = function() {
                            const urlParams = new URLSearchParams(window.location.search);
                            const lang = urlParams.get('lang');
                            if (lang === 'zh') {
                                updateLanguage('中文');
                            } else {
                                updateLanguage('English');
                            }
                        };
                    </script>

                    <div class="right-item d-flex align-items-center">
                        <i class="bi bi-person-circle"></i>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown ms-2">
                                <a class="nav-link dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link ms-2" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </div>
                </div>
            </div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

