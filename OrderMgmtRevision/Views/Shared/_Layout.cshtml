<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderMgmtRevision</title>
    @RenderSection("Styles", required: false)
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrderMgmtRevision.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <div class="main-container">
        <div class="sidebar-container">
            <div class="sidebar-header">
                领星 OMS
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-list">
                    <li class="sidebar-link">
                        <a class="sidebar-anchor" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-house-fill"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a class="sidebar-anchor" asp-controller="Customer" asp-action="Index">
                            <i class="bi bi-people-fill"></i>
                            Customers
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a class="sidebar-anchor" asp-controller="Warehouse" asp-action="Index">
                            <i class="bi bi-building-fill"></i>
                            Warehouse
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a class="sidebar-anchor" asp-controller="Inventory" asp-action="Index">
                            <i class="bi bi-box-seam-fill"></i>
                            Inventory
                        </a>
                    </li>
                    <li class="sidebar-link">
                        <a class="sidebar-anchor">
                            <i class="bi bi-gear-fill"></i>
                            Settings
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-content">
            <div class="topbar">
                <div class="tab-group" id="tabsContainer" data-tabs="[]">
                    <div class="tab">
                        Dashboard
                        <i class="bi bi-x"></i>
                    </div>
                </div>
                <div class="topbar-right">
                    <div class="right-item">
                        <i class="bi bi-envelope-paper-fill"></i>
                    </div>
                    <div class="right-item">
                        <i class="bi bi-robot"></i>
                    </div>
                    <div class="right-item">
                        <i class="bi bi-download"></i>
                    </div>
                    <div class="right-item">
                        <i class="bi bi-question-circle"></i>
                    </div>
                    <div class="right-item"> 
                        English
                        <i class="bi bi-caret-down-fill"></i>
                    </div>
                    <div class="right-item">
                        <i class="bi bi-person-circle"></i>

                        @if (User.Identity != null && User.Identity.IsAuthenticated == true)
                        {
                            <span>@User.Identity.Name</span>
                            <i class="bi bi-caret-down-fill"></i>
                            <a class="nav-link d-inline" asp-controller="Account" asp-action="Logout">Logout</a>
                        }
                        else
                        {
                            <a class="nav-link d-inline" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </div>
                    <div class="right-item">
                        Arctic Warehouse
                        <i class="bi bi-caret-down-fill"></i>
                    </div>
                </div>
            </div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/tabs.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
