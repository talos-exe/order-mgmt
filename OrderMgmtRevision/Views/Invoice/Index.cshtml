@model OrderMgmtRevision.Models.StripePaymentModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Invoice Payment";
    var stripePublishableKey = Configuration["Stripe:PublishableKey"];
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Pay Invoice</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @TempData["Error"]
                        </div>
                    }

                    <p class="text-center fs-5 mb-4">
                        <strong>Amount Due:</strong>
                        <span class="text-success">$@((Model.Amount / 100.0).ToString("F2"))</span>
                    </p>

                    <a href="@Url.Action("DirectCheckout", "Invoice", new { amount = Model.Amount })"
                       class="btn btn-success btn-lg w-100 shadow-sm">
                        <i class="bi bi-credit-card me-2"></i> Pay with Stripe
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

