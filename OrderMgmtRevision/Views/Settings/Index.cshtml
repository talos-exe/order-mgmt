@model OrderMgmtRevision.Models.UserViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["My Account"];
}

<h2 class="mb-0 mt-2 text-center">@Localizer["My Account"]</h2>

<div class="container-lg min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card border-0 w-100" style="max-width: 80vw;">
        <div class="card-body">
            <div class="row">
                <!-- Left: User Profile -->
                <div class="col-md-6 border-end">
                    <div class="text-center">
                        <i class="bi bi-person-circle fs-1 text-primary"></i>
                        <h4 class="mt-2">@Model.UserName</h4>
                        <p class="text-muted">@Model.Email</p>
                        <a href="@Url.Action("EditProfile", "Account")" class="btn btn-outline-primary btn-sm mt-2">
                            @Localizer["Edit Profile"]
                        </a>
                    </div>
                </div>

                <!-- Right: Stats -->
                <div class="col-md-6">
                    <div class="mb-4 text-center">
                        <i class="bi bi-box-seam fs-3 text-info"></i>
                        <h5 class="mt-2">@Localizer["Products Added"]</h5>
                        <p class="fs-4 fw-bold">ProductCount</p>
                    </div>

                    <div class="mb-4 text-center">
                        <i class="bi bi-truck fs-3 text-success"></i>
                        <h5 class="mt-2">@Localizer["Shipments Made"]</h5>
                        <p class="fs-4 fw-bold">ShipmentsCount</p>
                    </div>

                    <div class="mb-4 text-center">
                        <i class="bi bi-wallet2 fs-3 text-warning"></i>
                        <h5 class="mt-2">@Localizer["Account Invoice"]</h5>
                        @if (Model.AccountBalance > 0)
                        {
                            <p class="fs-4 fw-bold text-success">
                                $@((Model.AccountBalance / 100)?.ToString("F2") ?? "0.00")
                            </p>
                        }
                        <a class="btn btn-success btn-lg shadow-sm" href="@Url.Action("InvoiceHistory", "Invoice")">
                            <i class="bi bi-credit-card me-2"></i> @Localizer["View Invoices"]
                        </a>
                    </div>

                    <div class="text-center">
                        <i class="bi bi-clock-history fs-3 text-secondary"></i>
                        <h5 class="mt-2">@Localizer["Last Login"]</h5>
                        <p class="fs-6">@Model.User.LastLogin?.ToString("g")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
